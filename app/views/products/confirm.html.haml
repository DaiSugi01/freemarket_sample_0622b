.exhibit-container
  %header.exhibit-container__header
    .exhibit-container__header__merucari-logo
      = link_to root_path do
        =image_tag 'mercari.png',  alt: 'mercari', width: '185', height: '49'


  %main.exhibit-container__main
    .exhibit-container__main__buy
      .exhibit-container__main__buy__head
        .exhibit-container__main__buy__head__page-title
          購入内容の確認
      .exhibit-container__main__buy__datail
        .exhibit-container__main__buy__datail__inner
          = image_tag @image[0].image.url, alt: '商品画像0', class: 'buy-product-image'
          %p.exhibit-container__main__buy__datail__inner__product-name        
            = @product.name
          .exhibit-container__main__buy__datail__inner__buy-form
            .exhibit-container__main__buy__datail__inner__buy-form__price
              = "¥#{@product.price}"
              %span.burdens 送料込み
            .exhibit-container__main__buy__datail__inner__buy-form__point
              ポイントはありません
            .exhibit-container__main__buy__datail__inner__buy-form__buy-price
              .exhibit-container__main__buy__datail__inner__buy-form__buy-price__text
                支払金額
              .exhibit-container__main__buy__datail__inner__buy-form__buy-price__integer
                = "¥#{@product.price}"
            .exhibit-container__main__buy__datail__inner__buy-form__buy-button
              = link_to "購入する", pay_products_path(@product), class:'buy-button'
        .exhibit-container__main__buy__datail__shipping-address
          .exhibit-container__main__buy__datail__shipping-address__inner
            %p.shipping-address
              配送先
            %p.shipping-address-info
              = "〒#{@address.zip}"
              %br
              = @address.address
              %br
              = @address.full_name+@address.full_name_kana

        .exhibit-container__main__buy__datail__payment-method
          .exhibit-container__main__buy__datail__payment-method__inner
            %p.payment-method
              支払方法
            %p.payment-method-info
              = "/"
              
  %footer.exhibit-container__footer
    %ul.guide
      %li< プライバシーポリシー
      %li.li-2< メルカリ利用規約
      %li.li-2< 特定商取引に関する表記
    .exhibit-container__footer__mercari-logo
      = link_to image_tag('https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?891577966', alt: '', height: '65', width: '80'),root_path
    .exhibit-container__footer__comment
      © 2019 Mercari
              