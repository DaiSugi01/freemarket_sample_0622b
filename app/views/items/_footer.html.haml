            = link_to "コンプライアンスポリシー", root_path, class: "footer__nav__cell__lists__list__link"
      .footer__nav__cell__inner--right
        %ul.footer__nav__cell__lists
          %li.footer__nav__cell__lists__list
            = link_to "個人データの安全管理に係る基本方針", root_path, class: "footer__nav__cell__lists__list__link"
          %li.footer__nav__cell__lists__list
            = link_to "特定商取引に関する表記", root_path, class: "footer__nav__cell__lists__list__link"
          %li.footer__nav__cell__lists__list
            = link_to "資金決済法に基づく表示", root_path, class: "footer__nav__cell__lists__list__link"
          %li.footer__nav__cell__lists__list
            = link_to "法令順守と犯罪抑止のために", root_path, class: "footer__nav__cell__lists__list__link"
          %li.footer__nav__cell__lists__list
