    .footer__nav__cell.footer__nav__cell--lang
      %h2.footer__nav__cell__head 国
      %ul.footer__nav__cell__lists
        %li.footer__nav__cell__lists__list
          = link_to "日本", root_path, class: "footer__nav__cell__lists__list__link"
        %li.footer__nav__cell__lists__list
          = link_to "United States", root_path, class: "footer__nav__cell__lists__list__link"
  .footer__bottom
    = link_to root_path, class: "footer__bottom__mercari" do
      = image_tag 'bottom-icon-mericari.png', alt: 'bottom-icon-mercari', class: 'footer__bottom__mercari__image'
    %span
      %small © 2019 Mercari