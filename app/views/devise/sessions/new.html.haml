= render "header"
.sign_in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .sign_in__field.sign_in__sign_up_link
      %p.info アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_registration_path(resource_name), class: "sign_in__field__link sign_up"
    .sign_in__field
      %i.fa.fa-facebook-square.fa-lg.fa-sign_in_facebook
      = link_to "facebookでログイン", tbl_user_facebook_omniauth_authorize_path, class: "sign_in__field__link facebook"
    .sign_in__field
      %i.fa.fa-google.fa-lg.fa-sign_in_google
      = link_to "Googleでログイン", "", class: "sign_in__field__link google"
    .sign_in__field
      = f.email_field :email, class:"sign_in__field__input", autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
    .sign_in__field
      = f.password_field :password, class:"sign_in__field__input", autocomplete: "current-password", placeholder: "パスワード"
    -#
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
    .sign_in__field
      = f.submit "ログイン", class: "sign_in__field--button"
    .sign_in__field
      = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "sign_in__field__new_password_link"
= render "devise/registrations/footer"
